/* pages/category/category.wxss */
page{
background-color:#f0f0f0;
height:100%;
}

.topBar {
  display: flex;
  flex-direction: column;
  align-items: center;
  background:#FFD700;
  padding-bottom: 20rpx; 
  padding-top: 20rpx;
}
.changeBtn{
  width: 40%;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #000000;
  border-radius: 30rpx;
  font-size: 26rpx;
}
.changeBtn .leftactive{
  float: left;
  width: 50%;
  background: #000000;
  text-align: center;
  color: #FFD700;
  border-top-left-radius: 23rpx;
  border-bottom-left-radius: 23rpx;
}
.changeBtn .rightactive{
  float: left;
  width: 50%;
  background: #000000;
  text-align: center;
  color: #FFD700;
  border-top-right-radius: 23rpx;
  border-bottom-right-radius: 23rpx;
}

.changeBtn .leftdefault{
  float: left;
  width: 50%;
  text-align: center;
  border-top-left-radius: 23rpx;
  border-bottom-left-radius: 23rpx;
}
.changeBtn .rightdefault{
  float: left;
  width: 50%;
  text-align: center;
  border-top-right-radius: 23rpx;
  border-bottom-right-radius: 23rpx;
}

/** 类别列表*/
.category-list{
  float:left;
  width: 100%;
  background: #ffffff;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #dfdfdf; 
}
.left{
  float: left;
  width: 15%;
  text-align: center;
}
.left image{
  width:40rpx;
  height:40rpx;
  margin-top: 25rpx;
}
.text{
  float: left;
  font-size: 30rpx;
  width: 75%;
}
.right{
  float: left;
  font-size: 45rpx;
  letter-spacing: 5rpx;
  color: #808080;
  text-align: center;
  line-height: 90rpx;
  width: 10%;
}

.category-bottom{
  position: fixed;
  float: left;
  width: 100%;
  bottom: 60rpx;
}
.category-bottom button{
  width: 90%;
}