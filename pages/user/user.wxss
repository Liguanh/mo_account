/* pages/user/user.wxss */
/**index.wxss**/
page{
background-color:#f0f0f0;
height:100%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background:#FFD700;
  padding-bottom: 20rpx; 
}

.userinfo-avatar {
  overflow:hidden;
  display: block;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 1px solid #fff;
  box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.2);
}
.userinfo-nickname {
  font-size: 30rpx;
  font-weight: light;
}
/*帐户中心数据统计*/
.user-data {
  width: 100%;
  margin-top:20rpx;
  height: 100rpx;
  text-align: center;
}
.user-data .list {
  float: left;
  text-align: center;
  width: 33.33%;
}
.user-data .list .top{
  font-size: 35rpx;
  margin-bottom: 5rpx;
  font-weight: bold;
}
.user-data .list .bottom{
  font-size: 28rpx;
  font-weight: light;
}

/**帐户的设置**/
.user-setting{
  float: left;
  border-top: 1px solid #dfdfdf;
  width: 100%;
  margin-top: 30rpx;
}
.li{
  float:left;
  width: 100%;
  background: #ffffff;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #dfdfdf; 
}
.img{
  float: left;
  width: 15%;
  text-align: center;
}
.img image{
  width:50rpx;
  height:50rpx;
  margin-top: 20rpx;
}
.text{
  float: left;
  font-size: 30rpx;
  width: 75%;
}
.right{
  float: left;
  font-size: 35rpx;
  color: #808080;
  text-align: center;
  width: 10%;
}
.right image{
  width:40rpx;
  height:40rpx;
  margin-top: 25rpx;
}
.user-bottom{
  float: left;
  width: 100%;
  bottom: 30rpx;
  position: fixed
}
.user-bottom button{
  width: 70%;
}
