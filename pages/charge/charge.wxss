/** 计算器的颜色 */
.test-bg{
  position: fixed;
  width: 100%;
  background-color: #fff;
  border-top: solid 1px #d4d4d4;
  bottom: 0rpx;
}

.bg-image{
  display: block;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.2);
}

.btnGroup{
  display: flex;
  flex-direction: row;
}

.item{
width: 25%;
min-height: 60rpx;
text-align: center;
line-height: 100rpx;
}

.black{
  color: #303030;
  border-left: solid 1px #d4d4d4;
  border-bottom: solid 1px #d4d4d4;
  background: #fff;

}
