/* pages/charge/list.wxss */
page{
background-color:#f0f0f0;
height:100%;
}
/** 顶部导航栏颜色 */
.topBar {
  display: flex;
  flex-direction: row;
  align-items: center;
  background:#FFD700;
  padding-bottom: 20rpx; 
  padding-top: 20rpx;
}
/** 搜索框的样式 */
.searchInput{
  width: 25%;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #000000;
  border-radius: 30rpx;
  font-size: 30rpx;
  text-align: center;
  margin-left: 40rpx;
}

/** 账单列表 */
.record-list{
  float:left;
  width: 100%;
  background: #ffffff;
  height: 150rpx;
  line-height: 150rpx;
  border-bottom: 1px solid #dfdfdf; 
  margin-bottom: 10rpx;
}
.top-list{
  float:left;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #808080;
  font-size: 25rpx;
}
.top-image{
  float:left;
  text-align: center;
  width: 7%;
}
.top-image image{
  width: 30rpx;
  height: 30rpx;
  margin-top: 15rpx;
}
.top-left{
  float:left;
  text-align: left;
  width: 30%;
}
.top-right{
  float: left;
  text-align: right;
  padding-right:10%; 
  width: 53%;
}
.bottom-list{
  float:left;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
}
.bottom-image{
  float:left;
  text-align: center;
  width: 12%;
}
.bottom-image image{
  width: 60rpx;
  height: 60rpx;
  margin-top: 15rpx;
}
.bottom-left{
  float:left;
  text-align: left;
  width: 30%;
}
.bottom-left-top{
  font-size:30rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.bottom-left-bottom{
  font-size:23rpx;
  color: #b0b0b0;
  height: 40rpx;
  line-height: 40rpx;
}
.bottom-right{
  float: left;
  text-align: right;
  font-size: 35rpx;
  color: #FF6347;
  padding-right:12%; 
  width: 46%;
}